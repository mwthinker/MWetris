{
	"$schema": "tetris.schema.json",
	"window": {
		"fullscreenOnDoubleClick": false,
		"border": true,
		"pauseOnLostFocus": true,
		"moveWindowByHoldingDownMouse": false,
		"vsync": true,
		"limitFps": false,
		"multiSampleBuffers": 0,
		"multiSampleSamples": 0,
		"rowFadingTime": 0.25,
		"rowMovingTime": 0.05,
		"bar": {
			"height": 35,
			"color": "#8000004d"
		},
		"label": {
			"textColor": "#ffffff",
			"backgroundColor": "#ffffff00"
		},
		"checkBox": {
			"textColor": "#ffffff",
			"backgroundColor": "#ffffff00",
			"checkColor": "#00ff00ff",
			"boxColor": "#ffffff"
		},
		"radioButton": {
			"textColor": "#ffffff",
			"backgroundColor": "#ffffff00",
			"checkColor": "#00ff00ff",
			"boxColor": "#ffffff"
		},
		"button": {
			"focusColor": "#cc1a004d",
			"textColor": "#ff1a1a",
			"hoverColor": "#991a1a",
			"pushColor": "#cc0000b3",
			"backgroundColor": "#ffffff00",
			"borderColor": "#ffffffff"
		},
		"comboBox": {
			"textColor": "#ffffff",
			"focusColor": "#cc1a004d",
			"backgroundColor": "#361f4a",
			"selectedTextColor": "#ffffff",
			"selectedBackgroundColor": "#991a1a",
			"borderColor": "#ffffffff",
			"showDropDownColor": "#ffffff"
		},
		"font": "fonts/Ubuntu-B.ttf",
		"width": 860,
		"height": 1120,
		"positionX": 1496,
		"positionY": 224,
		"maximized": false,
		"resizeable": true,
		"minWidth": 480,
		"minHeight": 480,
		"icon": "images/icon.png",
		"sprites": {
			"background": "images/background.png",
			"computer": "images/computer.png",
			"human": "images/human.png",
			"cross": "images/cross.png",
			"zoom": "images/signs.png"
		},
		"tetrisBoard": {
			"font": "fonts/Ubuntu-B.ttf",
			"squareSize": 10,
			"borderSize": 3,
			"sprites": {
				"squareZ": "images/Z.png",
				"squareS": "images/S.png",
				"squareJ": "images/J.png",
				"squareI": "images/I.png",
				"squareL": "images/L.png",
				"squareT": "images/T.png",
				"squareO": "images/O.png"
			},
			"borderColor": "#4d0000",
			"startAreaColor": "#a3293d80",
			"outerSquareColor": "#a30a1799",
			"innerSquareColor": "#1405081a",
			"playerAreaColor": "#661a2680",
			"middleTextColor": "#33333380",
			"middleTextBoxSize": 7,
			"showDownBlock": true,
			"downBlockColor": "#ffffff26"
		}
	},
	"network": {
		"globalServer": {
			"ip": "127.0.0.1",
			"port": 11155
		},
		"server": {
			"ip": "127.0.0.1",
			"port": 11175
		}
	},
	"ai1": "Default",
	"ai2": "Default",
	"ai3": "Default",
	"ai4": "Default",

	"ais": [
		{
			"name": "Default2",
			"valueFunction": "-0.2*cumulativeWells - 1*holeDepth - 1*holes - 1*landingHeight"
		},
		{
			"name": "Defensive",
			"valueFunction": "-0.2*cumulativeWells - 0.8*holeDepth - 1.1*holes - 0.4*landingHeight"
		}
	]
}
